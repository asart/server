{% extends 'base.html.twig' %}

{% block title %}
    Задачи
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-3">Работай головой</h1>
        <p class="lead">Решай задачи, прокачивай свои навыки, зарабытывай очки опыта и обменивай их на полезный стаф!</p>
        <p><a class="btn btn-lg btn-success" href="#" role="button">Регистрируйся сегодня!</a></p>
    </div>

    <div class="row marketing">

        <div class="col-lg-12">
            <h2>Задачи</h2>
            {% for task in tasks %}
                <h4>
                    <a href="{{ path('task_view', {id: task.id}) }}">
                        {{ task.title }}
                    </a>
                </h4>
                <p>{{ task.description|striptags }}</p>
                <span class="label label-success" data-toggle="tooltip" data-placement="top" title="Успешных решений">{{ task.percents }}%</span>
                <span class="label label-primary" data-toggle="tooltip" data-placement="top" title="Уровень сложности">Легко</span>
            {% endfor %}
        </div>
    </div>
{% endblock %}