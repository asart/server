{% extends 'base.html.twig' %}

{% block title %}
    Добавить задачу / Задачи
{% endblock %}

{% block body %}
    <h1>Добавить задачу</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.title, 'Название задачи') }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Постановка задачи') }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.template, 'Начало задачи') }}
        {{ form_errors(form.template) }}
        {{ form_widget(form.template) }}
    </div>

    <div class="form-group">
        {{ form_label(form.test, 'Тесты') }}
        {{ form_errors(form.test) }}
        {{ form_widget(form.test) }}
    </div>

    {{ form_end(form) }}
{% endblock %}